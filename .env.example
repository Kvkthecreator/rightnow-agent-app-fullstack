# Application Mode
API_MODE=mock  # mock|remote

# Environment
NEXT_PUBLIC_APP_ENV=development

# Required for remote API mode
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# SUPABASE_JWKS_URL=your_supabase_url/auth/v1/keys
# SUPABASE_JWKS_ISSUER=your_supabase_url/auth/v1
# SUPABASE_JWT_AUD=authenticated

# External API (for remote mode)
NEXT_PUBLIC_API_BASE_URL=  # optional
# BACKEND_URL=https://rightnow-api.onrender.com

# Site URL (for absolute URLs)
# NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Database (if using direct DB access)
# DATABASE_URL=your_database_url

# Optional: Analytics & Monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Optional: Feature Flags
# NEXT_PUBLIC_BASKET_EVENTS=polling  # polling|websocket

# Optional default basket name
DEFAULT_BASKET_NAME=Personal Memory
