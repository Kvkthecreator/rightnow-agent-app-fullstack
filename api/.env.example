# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWKS_ISSUER=your_supabase_url/auth/v1
SUPABASE_JWKS_URL=your_supabase_url/auth/v1/keys
SUPABASE_JWT_AUD=authenticated

# PDF Ingestion Configuration
ALLOWED_PUBLIC_BASE=https://your-bucket.supabase.co/storage/v1/object/public/
PDF_MAX_BYTES=20000000
CHUNK_LEN=30000
FETCH_TIMEOUT_SECONDS=20

# Feature Flags
NARRATIVE_JOBS_ENABLED=false

# Security
JWT_SECRET=your_jwt_secret

# Database
DATABASE_URL=postgresql://user:password@localhost/dbname

# ── LLM configuration (OpenAI provider) ─────────────────────────────
# We default to the latest model name if available (e.g., gpt-5). The service
# will automatically fall back to strong defaults (o4/o4-mini) if unavailable.
OPENAI_API_KEY=your_openai_key
# Optional explicit overrides (leave unset to prefer the latest model):
# OPENAI_MODEL_P4_JSON=gpt-5
# OPENAI_MODEL_P4_TEXT=gpt-5
# P1 is already OpenAI-driven and uses its own env defaults (LLM_MODEL_P1, etc.).
