{
  "name": "@yarnnn/openai-apps",
  "version": "0.1.0",
  "description": "OpenAI Apps SDK adapter for YARNNN - ChatGPT integration for composing GTM briefs",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:ui && tsc -p tsconfig.json",
    "build:ui": "npm --prefix ui install --no-fund --no-audit && npm --prefix ui run build",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@yarnnn/integration-core": "file:../../packages/core",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.21",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
