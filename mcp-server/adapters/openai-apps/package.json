{
  "name": "@yarnnn/openai-apps",
  "version": "0.1.0",
  "description": "OpenAI Apps SDK adapter for YARNNN integrations (scaffold)",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "npm run build:ui && tsc -p tsconfig.json",
    "build:ui": "npm --prefix ui install --no-fund --no-audit && npm --prefix ui run build",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@yarnnn/integration-core": "file:../../packages/core",
    "dotenv": "^16.3.1",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.21",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
